@using System.Web.Optimization
@model IEnumerable<DAL.Node>



@section scripts {
 
<script src="~/Scripts/jquery-1.8.2.js"></script>
<script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>

   
    <script type="text/javascript">

        $(document).ready(function () {

            $('#xmltable').dataTable();        

        })
    </script>

}

@{
    ViewBag.Title = "Display";
}

 
<table data-toggle="table" id="nodetable" class="table table-striped table-bordered table-condensed table-hover table table-responsive" data-pagination="true" data-search="true">
    <thead>
        <tr>
            <th data-field="ID" data-align="right" data-sortable="true">ID</th>
            <th data-field="Name" data-align="center" data-sortable="true">Name</th>
            
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            
            <tr>
                <td>
                    
                      @Html.DisplayFor(modelItem => item.ID)
                    
                    
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                    <a href="/File/Index/?id=@item.ID"><i class="fa fa-info"></i>  Files</a>
            </tr>
        }
    </tbody>

</table>


</br>
 

