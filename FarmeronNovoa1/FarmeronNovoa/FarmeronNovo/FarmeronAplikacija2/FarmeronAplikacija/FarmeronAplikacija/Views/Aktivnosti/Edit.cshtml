    </div>
            
    <p>
        <button type="submit" class="btn btn-primary btn-md" value="Edit" id="btn" ><i id="af"></i>Edit</button>
        @Html.ActionLink("Back to List", "Index", new { id = Model.idFarmera })
    </p>
}
